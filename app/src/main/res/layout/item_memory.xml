<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/memory_meta_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/memory_people_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_default_user" />

            <TextView
                android:id="@+id/memory_people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/memory_people_image"
                android:text="Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memory_place_name_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/memory_people_name"
                android:text="at"
                android:textColor="#89000000"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/memory_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/memory_place_name_at"
                android:maxLines="1"
                android:text="Place Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/memory_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/memory_people_name"
                android:layout_toEndOf="@+id/memory_people_image"
                android:text="Date" />

            <ImageView
                android:id="@+id/privacy_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/memory_people_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/memory_date"
                android:src="@drawable/icon_onlyme" />
        </RelativeLayout>

        <TextView
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/memory_meta_rel"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:paddingStart="16dp"
            android:text="Posts"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:id="@+id/top_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post"
            android:layout_margin="0dp"
            android:adjustViewBounds="true"
            android:padding="0dp">

            <ImageView
                android:id="@+id/memory_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"

                android:scaleType="centerCrop"

                android:src="@drawable/default_image_placeholder" />

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/memory_image"
                android:layout_marginTop="5dp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slider">

                <com.footprints.footprints.assymetric.AsymmetricRecyclerView
                    android:id="@+id/assyrecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginTop="5dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="3dp"
                    android:fadingEdge="none"
                    android:focusable="false"
                    android:gravity="center"
                    android:listSelector="#00000000" />
            </RelativeLayout>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cmt_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_rel"
            android:layout_marginTop="5dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/reactionSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/likeSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/like_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_like" />


                    <TextView
                        android:id="@+id/like_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0 Like"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/commentSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/comment_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_comment" />

                    <TextView
                        android:id="@+id/comment_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0 Comment"
                        android:textAlignment="center"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</android.support.v7.widget.CardView>
